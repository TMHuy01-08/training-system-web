        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t(".languages") %> <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t(".vi"), locale:"vi" %></li>
            <li class="divider"></li>
            <li><%= link_to t(".en"), locale:"en" %></li>
