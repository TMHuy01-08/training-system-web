<% provide :title, t(".title") %>
<h1><%= t ".title" %></h1>
<div class="row">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-group col-md-6 col-md-offset-3">
      <%= f.label t(".email") %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
      <%= raw error_message(resource, :email) %>
    </div>
    <div class="form-group col-md-6 col-md-offset-3">
      <%= f.label t(".name") %>
      <%= f.text_field :name, class: "form-control" %>
      <%= raw error_message(resource, :name) %>
    </div>
    <div class="form-group col-md-6 col-md-offset-3">
      <%= f.label t(".password") %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      <%= raw error_message(resource, :password) %>
    </div>
    <div class="form-group col-md-6 col-md-offset-3">
      <%= f.label t(".password_confirm") %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      <%= raw error_message(resource, :password_confirmation) %>
    </div>
    <div class="actions col-md-6 col-md-offset-3">
      <%= f.submit t(".title"), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
